{% extends './Layouts/auth.layout.html.twig' %}

{% block LayoutTitle %}Register{% endblock %}

{% block AuthLayout %}

    <div class="flex min-h-full flex-col justify-center py-10 sm:px-6 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-md">
            <h2 class="mt-4 text-center text-2xl/9 font-bold tracking-tight text-gray-900">ایجاد حساب </h2>
        </div>

        <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
            <div class="bg-white px-6 py-12 shadow sm:rounded-lg sm:px-12">
                {{ form_start(registrationForm) }}
                <div class="space-y-6">
                    <div>
                        {{ form_label(registrationForm.username, 'نام کاربری', { 'label_attr': { 'class': 'block text-sm font-medium text-gray-900' } }) }}
                        <div class="mt-2">
                            {{ form_widget(registrationForm.username, { 'attr': { 'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm px-2' } }) }}
                            <div style="color: red; margin-top: 0.5rem">
                                {{ form_errors(registrationForm.username) }}
                            </div>
                        </div>
                    </div>

                    <div>
                        {{ form_label(registrationForm.email, 'آدرس ایمیل', { 'label_attr': { 'class': 'block text-sm font-medium text-gray-900' } }) }}
                        <div class="mt-2">
                            {{ form_widget(registrationForm.email, { 'attr': { 'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm px-2' } }) }}
                            <div style="color: red; margin-top: 0.5rem">
                                {{ form_errors(registrationForm.email) }}
                            </div>
                        </div>
                    </div>

                    <div>
                        {{ form_label(registrationForm.plainPassword.first, 'رمز عبور', { 'label_attr': { 'class': 'block text-sm font-medium text-gray-900' } }) }}
                        <div class="mt-2">
                            {{ form_widget(registrationForm.plainPassword.first, { 'attr': { 'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm px-2' } }) }}
                            <div style="color: red; margin-top: 0.5rem">
                                {{ form_errors(registrationForm.plainPassword.first) }}
                            </div>
                        </div>
                    </div>

                    <div>
                        {{ form_label(registrationForm.plainPassword.second, 'تکرار رمز عبور', { 'label_attr': { 'class': 'block text-sm font-medium text-gray-900' } }) }}
                        <div class="mt-2">
                            {{ form_widget(registrationForm.plainPassword.second, { 'attr': { 'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm px-2' } }) }}
                            <div style="color: red; margin-top: 0.5rem">
                                {{ form_errors(registrationForm.plainPassword.second) }}
                            </div>
                        </div>
                    </div>

                    <div class="flex items-start">
                        <div class="flex items-center h-5">
                            {{ form_widget(registrationForm.agreeTerms, { 'attr': { 'class': 'h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500' } }) }}
                        </div>
                        <div class="ml-3 text-sm">
                            {{ form_label(registrationForm.agreeTerms, 'با شرایط و قوانین موافقم', { 'label_attr': { 'class': 'font-medium text-gray-700 mx-2' } }) }}
                            <div style="color: red; margin-top: 0.5rem">
                                {{ form_errors(registrationForm.agreeTerms) }}
                            </div>
                        </div>
                    </div>

                    <div>
                        <button type="submit"
                                class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                            ثبت نام
                        </button>
                    </div>
                </div>
                {{ form_end(registrationForm) }}
            </div>

            <p class="mt-10 text-center text-sm/6 text-gray-500">
                اشتراک دارید‌؟
                <a href="/login" class="font-semibold text-indigo-600 hover:text-indigo-500">ورود به حساب</a>
            </p>
        </div>
    </div>

{% endblock %}
